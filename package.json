{
  "name": "easy-route-management",
  "version": "1.2.0",
  "description": "Type-safe route management for JavaScript and TypeScript apps. Define nested routes in a single object and generate dynamic paths with parameters for React Router, Express, Angular, or any framework that uses paths.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/obeddiaz/Easy-Route-Management.git"
  },
  "keywords": [
    "front-end",
    "routes",
    "routing",
    "react-router",
    "express",
    "angular",
    "typescript",
    "path-management",
    "nested-routes"
  ],
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "jest test",
    "lint": "eslint '{src,test}/**/*.ts'",
    "prettier": "npx prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "prepare": "husky install"
  },
  "author": "Obed Diaz",
  "license": "ISC",
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^8.57.1",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
